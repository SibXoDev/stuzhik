{
  "name": "stuzhik",
  "version": "0.0.4",
  "description": "Minecraft launcher with intelligent mod management",
  "type": "module",
  "scripts": {
    "start": "bun run generate:source && vite",
    "dev": "bun run generate:source && vite",
    "build": "bun run generate:source && vite build",
    "generate:source": "bun scripts/generate-source-bundle.ts",
    "serve": "vite preview",
    "tauri": "tauri",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "tauri-build": "tauri build && bun generate-latest.js",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@fontsource/cascadia-code": "^5.2.3",
    "@fontsource/rubik": "^5.2.8",
    "@tanstack/solid-virtual": "^3.13.18",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/plugin-dialog": "^2.5.0",
    "@tauri-apps/plugin-fs": "^2.4.5",
    "@tauri-apps/plugin-opener": "^2.5.3",
    "@tauri-apps/plugin-process": "^2.3.1",
    "@tauri-apps/plugin-updater": "^2.9.0",
    "dompurify": "^3.3.1",
    "highlight.js": "^11.11.1",
    "jszip": "^3.10.1",
    "marked": "^17.0.1",
    "shiki": "^3.21.0",
    "solid-js": "^1.9.10"
  },
  "devDependencies": {
    "@iconify-json/clarity": "^1.2.4",
    "@iconify-json/fluent": "^1.2.36",
    "@iconify-json/hugeicons": "^1.2.22",
    "@iconify-json/svg-spinners": "^1.2.4",
    "@solidjs/testing-library": "^0.8.10",
    "@tauri-apps/cli": "^2.9.6",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "^1.3.5",
    "@types/dompurify": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@unocss/preset-icons": "^66.5.12",
    "@unocss/preset-uno": "^66.5.12",
    "@unocss/vite": "^66.5.12",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-plugin-solid": "^0.14.5",
    "happy-dom": "^20.1.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "unocss": "^66.5.12",
    "vite": "^7.3.1",
    "vite-plugin-solid": "^2.11.10",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.16",
    "vue": "^3.5.26"
  }
}
